datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model customers {
  id   Int    @id @default(autoincrement())
  name String
}

model products {
  id          String  @id @default(uuid()) @db.Uuid
  sku         String
  name        String
  description String?
  price       Float
  cost_price  Float
  active      Boolean
}

model orders {
  id               Int     @id @default(autoincrement())
  customer_id      Int
  status           String
  total_amount     Float
  shipping_address String
}

model order_items {
  id         Int     @id @default(autoincrement())
  order_id   Int
  product_id String  @db.Uuid
  unit_price Float
  quantity   Int
  subtotal   Float
}

model sales {
  id             Int     @id @default(autoincrement())
  order_id       Int
  customer_id    Int
  payment_method String
  amount         Float
  status         String
  paid_at        DateTime?
}

model sale_items {
  id         Int     @id @default(autoincrement())
  sale_id    Int
  product_id String  @db.Uuid
  unit_price Float
  quantity   Int
  subtotal   Float
}

model stock {
  product_id String  @id @db.Uuid
  quantity   Int
}

